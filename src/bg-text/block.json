{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "bsx-blocks/bg-text",
    "version": "0.1.0",
    "title": "BSX Background Text",
    "category": "design",
    "description": "Multi-line text with background color.",
    "example": {},
    "attributes": {
        "nodeName": {
            "type": "string",
            "default": "div"
        },
        "content": {
            "type": "string",
            "source": "html",
            "selector": ".bg-text",
            "__experimentalRole": "content"
        },
		"textSize": {
			"type": "string"
		},
		"fontWeight": {
			"type": "string"
		},
        "marginLeft": {
            "type": "string"
        },
        "marginRight": {
            "type": "string"
        },
        "marginBefore": {
            "type": "string"
        },
        "marginAfter": {
            "type": "string"
        },
        "textColor": {
            "type": "string"
        },
        "bgColor": {
            "type": "string",
            "default": "primary"
        }
    },
    "supports": {
        "html": false,
        "className": false
    },
    "textdomain": "bsx-blocks",
    "editorScript": "file:./index.js",
    "editorStyle": "file:./index.css"
}
